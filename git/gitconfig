[color]
  ui = true

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold

[format]
  # pretty = format:%C(blue)%ad%Creset %C(yellow)%h%C(green)%d%Creset %C(blue)%s %C(magenta) [%an]%Creset

[apply]
  whitespace = nowarn

[branch]
  autosetupmerge = true

[core]
  autocrlf = false
  quotepath = false

[alias]
  spull = svn rebase
  spush = svn dcommit
  slog = svn log --color --oneline --show-commit

  bbcconfig = !git config user.name \"Simon Thulbourn\" && git config user.email \"simon.thulbourn@bbc.co.uk\"
  st = status -sb
  conflicts = "!git status --short | grep \"^UU\""
  orphan = checkout --orphan
  authors = shortlog -s -n --all
